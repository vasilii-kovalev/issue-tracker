{
	"name": "server",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"main": "./index.ts",
	"scripts": {
		"container:stop": "docker stop issue-tracker-container",
		"container:remove": "docker rm -f issue-tracker-container",
		"remove-anonymous-volumes": "docker volume prune -f",
		"start:database": "docker run -d -p 27017:27017 -v issue-tracker-volume:/data/db --name issue-tracker-container mongo:latest",
		"start:server": "bun --watch ./index.ts",
		"start": "bun run start:database && bun run start:server",
		"stop:database": "bun run container:stop && bun run container:remove && bun run remove-anonymous-volumes",
		"check:types": "bunx --bun tsc --noEmit",
		"check:eslint": "bunx --bun eslint . --quiet"
	},
	"dependencies": {
		"@fastify/cookie": "10.0.1",
		"@fastify/jwt": "9.0.1",
		"@fastify/swagger": "9.1.0",
		"@fastify/swagger-ui": "5.0.1",
		"fastify": "5.0.0",
		"fastify-plugin": "5.0.1",
		"mongoose": "8.7.0"
	},
	"devDependencies": {
		"@eslint/js": "9.9.1",
		"@stylistic/eslint-plugin": "2.7.2",
		"@types/bun": "1.1.9",
		"@types/node": "22.5.4",
		"@typescript-eslint/parser": "8.3.0",
		"eslint": "9.9.1",
		"eslint-import-resolver-typescript": "3.6.3",
		"eslint-plugin-import-export-newline": "1.0.0",
		"eslint-plugin-import-x": "4.1.1",
		"eslint-plugin-no-autofix": "2.0.0",
		"eslint-plugin-simple-import-sort": "12.1.1",
		"globals": "15.9.0",
		"typescript-eslint": "8.3.0"
	}
}
