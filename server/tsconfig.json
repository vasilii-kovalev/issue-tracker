{
	"compilerOptions": {
		"target": "ES2022",
		"lib": [
			"ES2023"
		],
		"module": "ESNext",
		"skipLibCheck": true,
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		/* Bundler mode */
		"moduleResolution": "Node",
		"allowImportingTsExtensions": false,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noFallthroughCasesInSwitch": true,
		// For JavaScript configs.
		"allowJs": true
	},
	"include": [
		"src",
		"index.ts",
		"eslint.config.js"
	]
}
